class Cart

// start of class
{
private String itemName;
private double itemPrice;         // data members of class Cart
private String itemBrand;

void cart()         //default constructor
{

}
Cart(String itemName,double itemPrice,String itemBrand)      // parametrised constructor
{
	System.out.println("-------constructor------");
this.itemName=itemName;
this.itemBrand=itemBrand;
this.itemPrice=itemPrice;

}

void display()                                          //method to display Cart details
{
	System.out.println("Name of Item:"+itemName);
	System.out.println("Name of The Brand:"+itemBrand);
	System.out.println("Price of Item:"+itemPrice);
	
} 
 
 public static void main(String...args)                     // main method
 {
	 
	 Cart c1= new Cart("Mobile",20000,"Xiomi");
	 c1.display();                                                 // calling method to display cart details
	 
	 
 }  // end of main method

}
// end of class
